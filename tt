import { Component } from '@angular/core';
import { SchedulerService } from 'src/app/core/services/scheduler.service';
import { NgbModal, NgbModalOptions } from '@ng-bootstrap/ng-bootstrap';

@Component({
  selector: 'app-root',
  templateUrl: './app.component.html',
  styleUrls: ['./app.component.css']
})
export class AppComponent {
  title = 'SchedularUI';
  username = '';
  constructor(private schedulerService: SchedulerService, private modalService: NgbModal){
  }

  ngOnInit() {
    this.schedulerService.validateUser().subscribe(res => {
      this.username = res.name;
    });

    this.schedulerService.showLoadingIndicator.subscribe((showIndicator) => {
      if (showIndicator){
        const modalOptions:  NgbModalOptions = {
          size: 'sm',
          keyboard: false,
          backdrop: 'static'
        };
      }
    });
  }
}
