import { Injectable } from '@angular/core';
import { BehaviorSubject, Subject } from 'rxjs';

@Injectable({
    providedIn: 'root',
})
export class FilterService {
    private dataSource = new BehaviorSubject<any>({});
    private resetCrewInformation = new BehaviorSubject<any>({});
    private resetOrdersInformation = new BehaviorSubject<any>({});

    data = this.dataSource.asObservable();
    reset = this.resetCrewInformation.asObservable();
    resetOrders = this.resetOrdersInformation.asObservable();

      constructor() { }
  
    updatedDataSelection(data: any){
      this.dataSource.next(data);
    }

    resetCrewDetails() {
      this.resetCrewInformation.next(true);
    }

    resetOrderDetails() {
      this.resetOrdersInformation.next(true);
    }
}
