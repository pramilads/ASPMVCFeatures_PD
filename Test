import { Component, Input, EventEmitter, Output } from '@angular/core';
import { NgbActiveModal } from '@ng-bootstrap/ng-bootstrap';
import { SchedulerService } from 'src/app/core/services/scheduler.service';
import { UpdatedHours } from './../../../shared/models/search.model';

@Component({
  selector: 'map-crew-order',
  templateUrl: './map-crew-order.component.html'
})
export class MapCrewOrderComponent {
  @Input() public inputJobHours: any;
  @Input() public inputCrewCapacity: any;
  @Output() outputCapacity = new EventEmitter<any>();

  constructor(public activeModal: NgbActiveModal, private schedulerService: SchedulerService){
  }

  ngOnInit() {

  }

  updateCapacity(){
    let updatedHours: UpdatedHours = {
      JobHours: this.inputJobHours, 
      CrewCapacity: this.inputCrewCapacity
  }
    this.outputCapacity.emit(updatedHours);
    this.activeModal.close('save');
   }
}
