import { Component, OnInit, Inject } from '@angular/core';
import { FormBuilder, FormGroup, Validators, FormControl, FormArray } from '@angular/forms';
import { MatDialog, MatDialogRef, MAT_DIALOG_DATA } from '@angular/material/dialog';
import { NgxSpinnerService } from 'ngx-spinner';
import { AsyncAction } from 'rxjs/internal/scheduler/AsyncAction';

@Component({
  selector: 'app-crew-work-event',
  templateUrl: './crew-work-event.component.html',
})

export class CrewWorkEventComponent implements OnInit {

  description = "";
  employee = [];
  showEditForm: boolean = false;
  showDialogForm: boolean = false;

  sourceObj = {};
  employeeList = [];
  sTime = "";
  tTime = "";
  emp = [];
  crewType = "";
  truckId = "";

  crewTypeList: any = [];
  crewLeadList: any = [];
  truckIdList: any = [];

  tempCrewType: any = []
  tempTruckId: any = []
  tempCrewLead: any = []


  form: any;
  editDicomForm = new FormGroup({
    employee: new FormControl('', []),
    shiftDate: new FormControl('', []),
    fromTime: new FormControl('', []),
    toTime: new FormControl('', []),
    crewType: new FormControl('', []),
    truckId: new FormControl('', []),
    wmcid: new FormControl('', []),
    hqid: new FormControl('', []),
  });

  crewTypeForm = new FormGroup({
    crewType: new FormControl('', [Validators.required]),
    crewLead: new FormControl('', [Validators.required]),
    truckId: new FormControl('', [Validators.required]),
  });

  truckIdError = false;
  crewTypeError = false;
  crewLeadError = false;

  constructor(private fb: FormBuilder, private dialog: MatDialog,
    public dialogRef: MatDialogRef<CrewWorkEventComponent>,
    @Inject(MAT_DIALOG_DATA) public data: any) {
    this.sourceObj = data;
    this.description = data.title;
    this.crewType = data.formData.crewType;
    this.employeeList = data.formData.employeeList;
    this.emp = data.formData.employeeList;
    this.tempCrewType = Object.assign([], data.formData.CrewTypeList);

    if (data.formData.startTime && data.formData.toTime) {
      this.sTime = [data.formData.startTime.slice(0, 2), ":", data.formData.startTime.slice(2)].join('');
      this.tTime = [data.formData.toTime.slice(0, 2), ":", data.formData.toTime.slice(2)].join('');
    }
    this.editDicomForm.value['employee'] = data.formData.employeeList
    if (data.type === "edit") {
    }
  }

  ngOnInit(): void {
    var ct = this.removeDuplicates(this.tempCrewType);
    this.crewTypeList = this.removeDuplicates(this.tempCrewType);

    if (this.sourceObj['type'] === "dialog") {
      this.showDialogForm = true;
    }

    if (this.sourceObj['type'] === "edit") {
      this.showEditForm = true;
    }
  }

  removeDuplicates(array) {
    var unique = array.filter(function (elem, index, self) {
      return index === self.indexOf(elem);
    })
    return unique;
  }

  saveEdit() {
    this.dialogRef.close(this.editDicomForm.value);
  }

  saveDialog() {
    if (this.crewTypeForm.value['truckId'] !== "" && this.crewTypeForm.value['crewType'] !== ""
      && this.crewTypeForm.value['crewLead'] !== "") {
      this.dialogRef.close(this.crewTypeForm.value);
    }
    else {
      this.truckIdError = true;
      this.crewTypeError = true;
      this.crewLeadError = true;
    }
  }

  public hasError = (controlName: string, errorName: string) => {
    return this.crewTypeForm.controls[controlName].hasError(errorName);
  }

  public hasErrorTruckId = (controlName: string, errorName: string) => {
    return this.crewTypeForm.controls[controlName].hasError(errorName);
  }

  close() {
    this.dialogRef.close();
  }

  showDialog() {
    if (this.showDialogForm && this.sourceObj['formData'].CrewTypeList.length > 0
      && this.sourceObj['formData'].TruckIdList.length > 0) {
      return true;
    }
    else {
      return false;
    }
  }
}
